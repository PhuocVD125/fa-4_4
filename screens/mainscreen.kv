<MainScreen>:
    name: "_main_screen_"
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            MDIconButton:
                icon: "star"
                size_hint: 0.15, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Label:
                size_hint: 0.8, 1
                text: "Easy Translate"
                color: 0, 0, 0, 1
            MDIconButton:
                icon: "account-box"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 0.15, 1

        BoxLayout:
            size_hint: 1, 0.6
            orientation: "vertical"
            padding: 10
            MDTextButton:
                font_size: 26
                size_hint:1, 0.2
                text: "Enter Text Here"
                on_press: root.change_screen('_text_translate_screen_')
            BoxLayout:
                MDTextButton:
                    size_hint: 1, 1
                    on_press: root.change_screen('_text_translate_screen_')


        BoxLayout:
            size_hint: 1, 0.3
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.3
                padding: 10
                MDRectangleFlatButton:
                    id: src_language
                    size_hint: 0.4, 1
                    text: "English"
                    on_release:
                        root.show_choose_language_screen('src')
                MDIconButton:
                    id: swap_language
                    icon: "swap-horizontal"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint: 0.2, 1
                    on_release:
                        root.swap_language()
                MDRectangleFlatButton:
                    id: dest_language
                    text: "Vietnamese"
                    size_hint: 0.4, 1
                    on_release:
                        root.show_choose_language_screen('dest')

            BoxLayout:
                size_hint: 1, 0.7
                orientation: "horizontal"
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                    BoxLayout:
                        orientation: "vertical"
                        MDFloatingActionButton:
                            pos_hint: {"center_x": .7, "center_y": .5}
                            icon: "account-multiple-outline"
                        MDLabel:
                            pos_hint: {"center_x": .7, "center_y": .5}
                            halign: "center"
                            text: "Conversation"
                    BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    MDFloatingActionButton:
                        pos_hint: {"center_x": .5, "center_y": .5}
                        icon: "microphone"
                        icon_size: "50dp"
                    Label:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                    BoxLayout:
                        orientation: "vertical"
                        MDFloatingActionButton:
                            pos_hint: {"center_x": .3, "center_y": .5}
                            icon: "file"
                            theme_icon_color: "Custom"
                        MDLabel:
                            pos_hint: {"center_x": .3, "center_y": 1}
                            halign: "center"
                            text: "File"
                    BoxLayout:
