<TextTranslateScreen>:
    name: '_text_translate_screen_'
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            MDIconButton:
                icon: "arrow-left"
                size_hint: 0.15, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Label:
                size_hint: 0.8, 1
                text: "Easy Translate"
                color: 0, 0, 0, 1
            MDIconButton:
                icon: "history"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 0.15, 1
                on_release:
                    root.manager.transition.direction = 'right'
					root.manager.current = '_text_translate_screen_'
        BoxLayout:
            size_hint: 1, 0.9
            orientation: "vertical"
            MDTextField:
                font_size: 26
                hint_text: "Enter Text"
                padding: 10
                size_hint: 1, 0.5
            MDTextField:
                font_size: 26
                text: "Translated text"
                size_hint: 1, 0.5
                disabled: True

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.3
                padding: 10
                MDRectangleFlatButton:
                    size_hint: 0.4, 1
                    text: "English"
                MDIconButton:
                    icon: "swap-horizontal"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint: 0.2, 1
                MDRectangleFlatButton:
                    text: "Ni háº£o"
                    size_hint: 0.4, 1